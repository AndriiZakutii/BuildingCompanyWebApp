@page
@model BuildingCompanyWebApp.Pages.Employments.CreateModel

@{
    ViewData["Title"] = "Create";
}

@{ Services.PageNavigator.ChangeCurrentPage("Employments/Create", 0); }

<h1>Create</h1>

<h4>Employment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employment.EmployeeId" class="control-label">Employee</label>
                <select asp-for="Employment.EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employment.TaskId" class="control-label">Task</label>
                <select asp-for="Employment.TaskId" class ="form-control" asp-items="ViewBag.TaskId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employment.RoleId" class="control-label">Role</label>
                <select asp-for="Employment.RoleId" class ="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employment.EntryDate" class="control-label">Entry date</label>
                <input asp-for="Employment.EntryDate" class="form-control" />
                <span asp-validation-for="Employment.EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employment.EndDate" class="control-label">End date</label>
                <input asp-for="Employment.EndDate" class="form-control" />
                <span asp-validation-for="Employment.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page=@Services.PageNavigator.PreviousPageName asp-route-id=@Services.PageNavigator.PreviousId>Back To Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
