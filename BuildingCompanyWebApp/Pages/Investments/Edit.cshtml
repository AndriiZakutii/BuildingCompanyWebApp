            </div>
            <div class="form-group">
                <label asp-for="Investment.Sum" class="control-label"></label>
                <input asp-for="Investment.Sum" class="form-control" />
                <span asp-validation-for="Investment.Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Investment.Datetime" class="control-label"></label>
                <input asp-for="Investment.Datetime" class="form-control" />
