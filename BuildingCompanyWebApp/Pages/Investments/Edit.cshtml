                <label asp-for="Investment.TaskId" class="control-label"></label>
                <select asp-for="Investment.TaskId" class="form-control" asp-items="ViewBag.TaskId"></select>
                <span asp-validation-for="Investment.TaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
