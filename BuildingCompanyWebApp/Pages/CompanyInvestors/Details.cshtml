@page
@model BuildingCompanyWebApp.Pages.CompanyInvestors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Company Investor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyInvestor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyInvestor.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyInvestor.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyInvestor.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyInvestor.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyInvestor.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Foundation date")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyInvestor.FoundationDatetime)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Company type")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyInvestor.CompanyType.Id)
        </dd>
    </dl>
</div>


<br />
<h3>Investments</h3>
<p>
    <a asp-page="/Investments/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Raw("Sum")
            </th>
            <th>
                @Html.Raw("Date")
            </th>
            <th>
                @Html.Raw("Investor")
            </th>
            <th>
                @Html.Raw("Project")
            </th>
            <th>
                @Html.Raw("Task")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Investments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datetime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Investor.CompanyInvestor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Task.Id)
                </td>
                <td>
                    <a asp-page="/Investments/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Investments/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/Investments/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.CompanyInvestor.Id">Edit</a> |
    <a asp-page="/Investors/Index">Back to List</a>
</div>
