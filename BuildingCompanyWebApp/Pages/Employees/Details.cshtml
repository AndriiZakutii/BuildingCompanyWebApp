@page
@model BuildingCompanyWebApp.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Position")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeePosition.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Gender.Name)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Raw("Project")
            </th>
            <th>
                @Html.Raw("Task (id)")
            </th>
            <th>
                @Html.Raw("Task (descr.)")
            </th>
            <th>
                @Html.Raw("Entry date")
            </th>
            <th>
                @Html.Raw("End date")
            </th>
            <th>
                @Html.Raw("Role")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Task.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Task.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Task.TaskType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    <a asp-page="/Employments/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Employments/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/Employments/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
